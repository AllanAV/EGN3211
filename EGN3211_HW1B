#include<stdio.h>

//Definitions
#define CLS fflush(stdin)

int main (void) 
{
	//Constants Declaration & Initiation
	const char PRINCIPAL_PROMPT[]="Enter loan principal (-1 to end): ";
	const char INTEREST_PROMPT[]= "Enter interest rate: ";
	const char TERM_PROMPT[]= "Enter term of the loan in days: ";
	const char CHARGE_PROMPT[]= "The interest charge is $";
	
	//Global Variable Declaration & Initiation
	float principal = 0.00;
	
	do{	
		printf("%s",PRINCIPAL_PROMPT);
		scanf("%f", &principal);
		//printf("%.2f\n",principal);
		
		if(principal != -1)
		{
			//Local Variables Declaration & Initiation
			float rate = 0.00;
			float days = 0.00;
			
			printf("%s",INTEREST_PROMPT);
			scanf("%f", &rate);
			CLS;
			//printf("%.2f\n",rate);
		
			printf("%s",TERM_PROMPT);
			scanf("%f", &days);
			CLS;
			//printf("%.0f\n",days);
			
			float interest = principal * rate * days / 365;
		
			printf("%s%.2f \n\n",CHARGE_PROMPT, interest);
			
			//Variables Reset
			principal = 0.00;
			rate = 0.00;
			days = 0;
			interest = 0;
		}
	}while(principal != -1);
	
	return 0;
}
