#include<stdio.h>

//Definitions
#define CLS fflush(stdin);

int main (void) 
{
	//Variables Declaration & Initiation
	float sale = 0.00;
	
	//Constants Declaration & Initiation
	const float COMMISION = (float)9/100;
	const char PROMPT[] = "Enter  sales in dollars (-1 to end): ";
	const char PAY_OUT[] = "Salary is: $";
	
	do{
		float salary = 0.00;
		
		printf("%s",PROMPT);
		scanf("%f", &sale);
		CLS
		if(sale != -1)
		{
			salary = sale * COMMISION +200.00;
			printf("%s%.2f \n \n", PAY_OUT, salary);
			//salary reset
			salary = 0.00;
			//sale variable reset
			sale = 0.00;
		}
		
	}while(sale != -1);
	
   return 0;
}
}
