#include<stdio.h>

//Definitions
#define CLS fflush(stdin)



int main (void) 
{
	//Local Variable Declaration & Initiation
	int size=3;
	int x = 1;
	int y =1;
	
	printf("Please enter a number between 3 and 20: ");
	scanf("%d",&size);
	CLS;
	
	system ("CLS");
	//printf("\n");//Formating
	
	while(y <= size)
	{
		while(x <= size)
		{
			if(y==1)
			{
				printf("*");
			}
			else if(y==size)
			{
				printf("*");
			}
			else
			{
				if(x==1)
				{
					printf("*");
				}
				else if (x==size)
				{
					printf("*");
				}
				else
				{
					printf(" ");
				}
			}
			x++;
		}
		printf("\n");
		y++;
		x = 1;
	}
}
